<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#148e73"
    tools:context=".MainActivity"
    android:gravity="center"
    >

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/bangladesh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bangladeshButton"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/bangladesh"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.ActionBar.TabBar"
        />

    <Button
        android:id="@+id/india"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/indiaButton"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.ActionBar.TabBar"
        android:drawableLeft="@drawable/india"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/pakistan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pakistanButton"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:drawableLeft="@drawable/pakistan"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.ActionBar.TabBar"
        android:textStyle="bold"/>

</LinearLayout>